<div class="container-fluid">
	<div class="container" id="content_holder">
		<main>
			<% if (!meta.isUserLoggedIn) { %>
				<%- include('partials/homeLogin.ejs') %>
			<% } else { %>
			<%- include('partials/quickPost.ejs') %>
			<% } %>
			<hr>
			<section id="recent_questions" class="rounded">
				<header>
					<h3>Recent Questions</h3>
				</header>
				<% if (!loading) { %>
					<article>
						<p>Loading...</p>
					</article>
				<% } else { %>
					<%- include('partials/questions.ejs') %>
				<% } %>
			</section>
			<section id="recent_answers" class="rounded">
				<header>
					<h3>Recent Answers</h3>
				</header>
				<% if (!loading) { %>
					<article>
						<p>Loading...</p>
					</article>
				<% } else { %>
					<%- include('partials/answers.ejs') %> 
				<% } %>
			</section>
			<%- include ('partials/categories') %>
			</hr>
		</main>
	</div>
</div>
