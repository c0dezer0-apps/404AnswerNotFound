<div class="container-fluid">
	<main>
		<div class="container" id="content_holder">
			<section id="question">
				<header id="question_short">
					<h3><%= data.dataValues.summary %> </h3>
				</header>
				<article id="content">
					<p><%= data.dataValues.content %></p>
				</article>
				<article id="stats">
					<p><span>Created by <a href="/users/<%= data.dataValues.createdBy %>"><%= data.dataValues.createdBy %></a></span>, <span>Inquired <time><%= data.dataValues.createdAt.toLocaleString() %></time></span></p>
				</article>
			</section>
			<hr>
			<section id="answers">
				<header>
					<h3>Answers</h3>
				</header>
				<% for (let i = 0; i < data2.length; i++ ) { %>
						<article>
							<p><%= data2[i].dataValues.content %></p>
						</article>
						<hr>
				<% } %>
			</section>
		</div>
	</main>
</div>